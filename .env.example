# ========================
# General
# ========================
VERBOSE=false
LOCALE=en-US

# ========================
# Data paths
# ========================
SEEDS_FILE=data/sources/default.txt
PATH_RAW=data/raw/
PATH_SOURCES=data/sources/
PATH_SQL=data/sql/

# ========================
# Database
# ========================
DB_DRIVER=sqlite
DB_FILE=data/sql/givennames_v4.sqlite
# DB_URL=postgresql://user:password@localhost:5432/givennames

# ========================
# Crawler
# ========================
CRAWLER_UA=GivenNamesBot/4.0 (+https://example.org/bot)
CRAWLER_TIMEOUT=15000
CRAWLER_RETRIES=3
CRAWLER_DELAY=0

# ========================
# Importer
# ========================
IMPORTER_BATCH=500
IMPORTER_SKIP_DUPLICATES=true

# ========================
# Clustering / semantics
# ========================
CLUSTERING_ENABLED=false
CLUSTERING_METHOD=none
# Options: none | embeddings | wikidata
